<!DOCTYPE html>
<html>
<head>
  <title>Pragrog Books Online Store</title>
  <%= stylesheet_link_tag    :all %>
  <%= stylesheet_link_tag    "scafford" %>
  <%= stylesheet_link_tag    "store" %>
  <%= stylesheet_link_tag    "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshelf"%>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
			<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
				<%= render @cart %>
			<% end %>
			<% end %>
			<a href="http://">Home</a><br />
			<a href="http://">Questions</a><br />
			<a href="http://">News</a><br />
			<a href="http://">Contact</a><br />
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html
